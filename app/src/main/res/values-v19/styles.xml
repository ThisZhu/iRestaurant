<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowEnableSplitTouch">false</item>    <!-- Customize your theme here. -->
        <item name="android:splitMotionEvents">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right_half</item>
        <item name="android:windowBackground">@color/quantoumingdu</item>
        <item name="android:windowAnimationStyle">@style/MyThemeAnimation</item>
    </style>
    <style name="MyThemeAnimation" parent="android:Animation.Activity">
        <item name="android:activityCloseExitAnimation">@anim/exit_to_right_half</item>
        <item name="android:activityCloseEnterAnimation">@anim/exit_to_right_half</item>
        <item name="android:activityOpenEnterAnimation">@anim/start_to_left_half</item>
        <item name="android:activityOpenExitAnimation">@anim/start_to_left_half</item>
    </style>
</resources>
