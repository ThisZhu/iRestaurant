<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightgray"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativelayout_back"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/texview_back"
            android:text="@string/back"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/texview_choose_seat"
            android:text="@string/date_and_people"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <CalendarView
        android:id="@+id/calendarView"
        android:background="@color/white"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/relativelayout_back"
        android:layout_width="match_parent"
        android:layout_height="346dp" />
    <LinearLayout
        android:layout_below="@+id/calendarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.zhudi.irestaurant.home.view.PickerScrollView
            android:id="@+id/pickerview_1"
            android:layout_below="@+id/calendarView"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <com.zhudi.irestaurant.home.view.PickerScrollView
            android:id="@+id/pickerview_2"
            android:layout_below="@+id/calendarView"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
</RelativeLayout>