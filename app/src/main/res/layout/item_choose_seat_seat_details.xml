<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageview_seat"
        android:background="@color/yellow"
        android:layout_width="140dp"
        android:layout_height="match_parent" />
    <TextView
        android:id="@+id/textview_click_to_details"
        android:text="@string/click_to_details"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/toumingdu1"
        android:layout_width="140dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/textview_seat_name"
        android:text="@string/seat_name"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="160dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/textview_seat_prices_2"
        android:text="@string/seat_prices_2"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="163dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/textview_seat_decription"
        android:text="@string/seat_decription"
        android:textSize="14dp"
        android:gravity="left"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/icon_floating_action_button"
        android:foreground="@android:drawable/ic_media_next"
        app:backgroundTint="@color/red"
        android:layout_gravity="right|bottom"
        android:layout_width="40dp"
        android:layout_height="40dp" />
</android.support.v7.widget.CardView>