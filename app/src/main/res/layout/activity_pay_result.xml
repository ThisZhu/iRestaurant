<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightgray"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativelayout_back"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/texview_pay_result"
            android:text="@string/pay_result"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <TextView
        android:id="@+id/textview_reult_success"
        android:layout_below="@+id/relativelayout_back"
        android:text="@string/reult_success"
        android:gravity="center"
        android:textSize="45dp"
        android:layout_width="match_parent"
        android:layout_height="350dp" />
    <TextView
        android:id="@+id/textview_ensure"
        android:text="@string/ensure"
        android:background="@drawable/shape_button_rectange"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textview_reult_success"
        android:layout_width="200dp"
        android:layout_height="50dp" />
</RelativeLayout>