<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/texview_set_password_second"
        android:text="@string/set_password_second"
        android:textSize="18dp"
        android:background="@color/white"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/textview_retrieve_password_successfully"
        android:text="@string/retrieve_password_successfully"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/texview_set_password_second"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="80dp" />
    <TextView
        android:id="@+id/textview_ensure"
        android:text="@string/ensure"
        android:layout_below="@+id/textview_retrieve_password_successfully"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_button_rectange"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</RelativeLayout>