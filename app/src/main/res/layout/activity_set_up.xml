<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/texview_retrieve_password"
            android:text="@string/set_up_activity"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <FrameLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/icon_check"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/abc_btn_radio_material" />
        <TextView
            android:id="@+id/textview_check"
            android:text="@string/check"
            android:textColor="@color/blackdefine"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_gravity="bottom"
            android:background="@color/blackdefine"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
        <TextView
            android:id="@+id/icon_details_check"
            android:text="@string/icon_details"
            android:gravity="center"
            android:textSize="27dp"
            android:layout_gravity="right"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </FrameLayout>
    <FrameLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/icon_notice_music"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/abc_btn_radio_material" />
        <TextView
            android:id="@+id/textview_notice_music"
            android:text="@string/notice_music"
            android:textColor="@color/blackdefine"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_gravity="bottom"
            android:background="@color/blackdefine"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
        <Switch
            android:id="@+id/switch_button_notice_music"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>
    <FrameLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/icon_boot"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/abc_btn_radio_material" />
        <TextView
            android:id="@+id/textview_boot"
            android:text="@string/boot"
            android:textColor="@color/blackdefine"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
        <LinearLayout
            android:layout_marginLeft="35dp"
            android:layout_gravity="bottom"
            android:background="@color/blackdefine"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
        <Switch
            android:id="@+id/switch_button_boot"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>
    <FrameLayout
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/icon_clear"
            android:layout_gravity="center_vertical"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/abc_btn_radio_material" />
        <TextView
            android:id="@+id/textview_clear"
            android:text="@string/clear"
            android:textColor="@color/blackdefine"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </FrameLayout>
    <TextView
        android:id="@+id/textview_version"
        android:text="@string/version"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:gravity="center_horizontal|bottom"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </LinearLayout>