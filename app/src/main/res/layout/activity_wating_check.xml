<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/toumingdu"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativelayout_waiting_check"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ProgressBar
        android:id="@+id/progressbar_waiting_check"
        android:layout_alignParentTop="true"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <TextView
        android:id="@+id/textview_waiting_check"
        android:text="@string/waiting_check"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_below="@+id/progressbar_waiting_check"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="60dp" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout_check_finish_1"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textvewi_check_finish_1"
        android:text="@string/check_finish_1"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/textview_ensure_1"
        android:text="@string/ensure"
        android:background="@drawable/shape_button_rectange"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/textvewi_check_finish_1"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="40dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout_check_finish_2"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textvewi_check_finish_2"
            android:text="@string/check_finish_2"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />
        <LinearLayout
            android:textColor="@color/black"
            android:layout_below="@+id/textvewi_check_finish_2"
            android:layout_centerHorizontal="true"
            android:layout_width="250dp"
            android:layout_height="40dp" >
            <TextView
                android:id="@+id/textview_disensure"
                android:text="@string/disensure"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:background="@drawable/shape_button_rectange"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_weight="1.5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/textview_ensure_2"
                android:text="@string/ensure"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:background="@drawable/shape_button_rectange"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </RelativeLayout>
    </RelativeLayout>