<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/lightgray"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativelayout_back"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/texview_back"
            android:text="@string/back"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@color/white"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/texview_choose_food"
            android:text="@string/please_ensure_food_order"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearlayout_order"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/relativelayout_back"
        android:background="@color/white"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:text="@string/order_details"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="top|center_horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
        <LinearLayout
            android:background="@color/blackdefine"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
        <ListView
            android:id="@+id/listview_order"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
        <LinearLayout
            android:background="@color/blackdefine"
            android:layout_width="match_parent"
            android:layout_height="0.4dp"/>
        <TextView
            android:id="@+id/textView_price2"
            android:text="@string/price2"
            android:textColor="@color/black"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/linearlayout_order"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/textview_disensure"
            android:text="@string/disensure"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:background="@drawable/shape_button_rectange"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_submit"
            android:text="@string/submit"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:background="@drawable/shape_button_rectange"            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>