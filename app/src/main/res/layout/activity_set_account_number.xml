<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    android:orientation="vertical">
    <LinearLayout
        android:background="@color/white"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/texview_set_account_number"
            android:text="@string/set_account_number"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <FrameLayout
        android:id="@+id/framelayout_set_head_portrait"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/imageview_set_head_portrait"
            android:background="@color/yellow"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/textview_set_head_portrait"
            android:text="@string/set_head_portrait"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </FrameLayout>
    <LinearLayout
        android:background="@color/blackdefine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
    <FrameLayout
        android:id="@+id/framelayout_set_beijing"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/imageview_set_beijing"
            android:background="@color/yellow"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/textview_set_beijing"
            android:text="@string/set_beijing"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </FrameLayout>
    <LinearLayout
        android:background="@color/blackdefine"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/textview_set_user_name"
            android:text="@string/set_user_name"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/edittext_set_user_name_details"
            android:text="@string/set_user_name_details"
            android:background="@null"
            android:textSize="15dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>
    <LinearLayout
        android:background="@color/blackdefine"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/textview_set_password"
            android:text="@string/set_password"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="40dp" />
        <TextView
            android:id="@+id/textview_set_password_details"
            android:text="@string/set_password_details"
            android:background="@null"
            android:gravity="center"
            android:textSize="35dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>
    <LinearLayout
        android:background="@color/blackdefine"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.4dp"/>
    <FrameLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/textview_set_personalized_signature"
            android:text="@string/set_personalized_signature"
            android:textColor="@color/black"
            android:gravity="center_vertical|right"
            android:textSize="15dp"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="40dp" />
        <EditText
            android:id="@+id/edittext_set_personalized_signature_details"
            android:text="@string/set_personalized_signature_details"
            android:background="@null"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="100dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/textview_disensure"
            android:text="@string/disensure"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:background="@drawable/shape_button_rectange"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/textview_ensure"
            android:text="@string/ensure"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:background="@drawable/shape_button_rectange"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    </LinearLayout>